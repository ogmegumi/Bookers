<p id="notice"><%= flash[:notice] %></p>

<h1>Books</h1>

<table>
    <thead>
       <th>Title</th>
       <th>Body</th>
    </thead>
    <tbody>
    <% @books.each do |book| %>
       <tr>
           <td><%= book.title %></td>
           <td><%= book.body %></td>
           <td><%= link_to "show", book_path(book.id) %></td>
           <td><%= link_to "edit", edit_book_path(book) %></td>
           <td><%= link_to "destroy",book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
       </tr>
    <% end %>
   </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book,local:true do |f| %>
   <% if @book.errors.any? %>
     <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
     <div id="error_explanation">
       <ul>
         <% @book.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
       </ul>
      </div>
   <% end %>

    <div class="field">
       <label for="book_title">Title</laber><br>
       <%= f.text_field :title %>
    </div>
    <div class="field">
       <label for="book_body">Body</label>
       <%= f.text_area :body %>
    </div>
    <div class="actions">
       <%= f.submit 'Create Book' %>
    </div>

<% end %>